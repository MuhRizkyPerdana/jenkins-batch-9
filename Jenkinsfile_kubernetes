pipeline {
    agent any
    stages {
        stage ('build') {
            agent {
                docker {
                    image 'golang:alpine3.16'
                    label 'fire'
                }
            }
            steps {
                echo "Build App"
                sh 'docker build -t golang-sample:1 .'
            }
        }
        stage ('Deploy') {
            steps {
                echo "Deploy App"
            }
        }
    }
}
